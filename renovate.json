{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "node": {
    "enabled": true
  },
  "nvm": {
    "enabled": true
  },
  "js": {
    "enabled": true,
    "ignoreDeps": []
  },
  "autodiscover": true,
  "autodiscoverFilter": "carynligon/renovate-test",
  "onboarding": false,
  "requireConfig": false,
  "packageRules": [
    {
      "matchUpdateTypes": ["patch", "minor"],
      "groupName": "Dependencies (non-major)"
    },
    {
      "matchUpdateTypes": ["major"],
      "groupName": "Dependencies (MAJOR)"
    }
  ]
}
